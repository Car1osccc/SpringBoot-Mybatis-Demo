<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyh.smarthome.dal.user.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.cyh.smarthome.dal.user.model.User">
        <result column="UserID" jdbcType="VARCHAR" property="userID" />
        <result column="UserName" jdbcType="VARCHAR" property="userName" />
        <result column="UserPassword" jdbcType="VARCHAR" property="userPassword" />
        <result column="UserTelephone" jdbcType="VARCHAR" property="userTelephone" />
        <result column="UserAddress" jdbcType="VARCHAR" property="userAddress" />
        <result column="UserGender" jdbcType="VARCHAR" property="userGender" />
        <result column="Family_FamilyID" jdbcType="VARCHAR" property="familyID" />
        <result column="UserDeleteFlag" jdbcType="INTEGER" property="userDeleteFlag" />
    </resultMap>

    <select id="selectUserByUserName" resultMap ="BaseResultMap">
        SELECT * from user
        WHERE UserName = #{UserName} AND UserPassword = #{UserPassword}
    </select>
    <select id="selectUserByUserID" resultMap ="BaseResultMap">
        SELECT * from user
        WHERE UserID = #{UserID}
    </select>

</mapper>


